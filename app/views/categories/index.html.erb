<h1 align = 'center'>Listing all categories</h1>
<div algin="center">
    <%= will_paginate %>
        <% @categories.each do |category| %>
            <ul class='listing'>
                <div class='row'>
                    <div class='wel col-md-4 col-md-offset-4'>
                        <li class='article-actions'>
                            <%= link_to "#{category.name}", category_path(category), class: "btn btn-lg btn-primary" %>
                        </li>
                    </div>
                </div>
            </ul>
        
        <% end %>
    <%= will_paginate %>
</div>